<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tela.Servicos.ListaServicos">


    <ImageView
        android:id="@+id/perfil3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/profile_male"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textLocal4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins"
        android:text="@string/local"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/rectangle_local3"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:src="@drawable/pin_map"
        app:layout_constraintStart_toEndOf="@+id/textLocal4"
        app:layout_constraintTop_toTopOf="@+id/textLocal4" />

    <View
        android:id="@+id/rectangle_local3"
        android:layout_width="300dp"
        android:layout_height="39dp"
        android:layout_marginTop="8dp"
        android:background="@color/grey"
        app:layout_constraintEnd_toStartOf="@+id/perfil3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textLocal4" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="540dp"
        android:columnCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <GridView
            android:id="@+id/gridview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="2" />
    </GridLayout>

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="70dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintStart_toStartOf="parent">

        <View
            android:id="@+id/view1"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/viwegasolina"/>
        <View
            android:id="@+id/view2"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <View
            android:id="@+id/view3"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <View
            android:id="@+id/view4"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <View
            android:id="@+id/view5"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <View
            android:id="@+id/view6"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <View
            android:id="@+id/view7"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>